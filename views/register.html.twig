{% extends layout %} {% block content %}
<h3>Введите данные:</h3>
    <form method="post" action="/account/createUser">
        <input required name="login" type="text" placeholder="login"><br><br>
        <input required name="password" type="password" placeholder="password"><br><br>
        <input required name="name" type="text" placeholder="ФИО"><br><br>
        <input required name='adress' type='text' placeholder='Адрес доставки'></input><br><br>
        <input required name='tel' type='tel' pattern="+7[0-9]{3}[0-9]{3}-[0-9]{2}-[0-9]{2}" placeholder='Телефон'></input><br><br>
        <button type="submit">Отправить</button>
    </form>
{% endblock content %}
