{% extends layout %} {% block content %}
<h3>Введите Ваши данные:</h3>    
    <form method='POST' action='/order/put_order'>
    <input required name='user_name' type='text' placeholder='ФИО' value='{{ session.name }}'></input><br><br>
    <input required name='adress' type='text' placeholder='Адрес доставки' value='{{ session.adress }}'></input><br><br>
    <input required name='tel' type='tel' pattern="+7[0-9]{3}[0-9]{3}-[0-9]{2}-[0-9]{2}" placeholder='Телефон' value='{{ session.tel }}'></input><br><br>
    <input type='submit'></input>
    </form>
{% endblock content %}
